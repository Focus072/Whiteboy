# Database
# Required for Prisma client generation
# Use the pooled connection string for most operations
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
# Use unpooled for migrations
DATABASE_URL_UNPOOLED=postgresql://user:password@host:5432/dbname?sslmode=require

# Inngest Configuration
# For local development, use Inngest dev server
# For production, use Inngest Cloud
INNGEST_BASE_URL=http://127.0.0.1:8288  # Local: http://127.0.0.1:8288 | Production: https://api.inngest.com
INNGEST_EVENT_KEY=dev  # Local: dev | Production: your_production_event_key
INNGEST_SIGNING_KEY=dev  # Local: dev | Production: signkey-prod-e85ec4f252b73073d57573d79f9f06dc6db2f8efb28c9cabf1f5d56920963bda

# Session Security
# REQUIRED: Generate a secure random string (minimum 32 characters)
# Use: openssl rand -base64 32
SESSION_SECRET=change-me-in-production-min-32-chars-secure-random-string

# Cloudflare R2 Storage (S3-compatible)
# Required if using file uploads or shipping labels
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=lumi-files
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Email Service (SendGrid or other)
# Required for order confirmations and shipping notifications
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@lumi.com
EMAIL_FROM_NAME=Lumi Commerce

# Veriff Age Verification
# Required for age verification
VERIFF_BASE_URL=https://stationapi.veriff.com
VERIFF_API_KEY=your_veriff_api_key
VERIFF_SIGNATURE_KEY=your_veriff_signature_key

# Authorize.Net Payment Processing
# Required for payment processing
AUTHORIZENET_API_LOGIN_ID=your_login_id
AUTHORIZENET_TRANSACTION_KEY=your_transaction_key
AUTHORIZENET_ENV=sandbox  # sandbox | production

# Shippo Shipping
# Required for shipping label generation
SHIPPO_TOKEN=your_shippo_token

# Tax Configuration
# Required for tax calculations
SALES_TAX_RATE=0
EXCISE_TAX_PER_GRAM=0

# Monitoring (Optional)
# For error tracking (e.g., Sentry)
# MONITORING_ENABLED=true
# SENTRY_DSN=your_sentry_dsn

# Node Environment
NODE_ENV=development  # development | production
